    <fragment
        android:id="@+id/Table"
        android:name="com.example.miljac.myapplication.TableFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        />

    <fragment
        android:id="@+id/Result"
        android:name="com.example.miljac.myapplication.ResultFragment"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/Table"/>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/Result">


        <fragment
            android:id="@+id/CircleTime"
            android:name="com.example.miljac.myapplication.CircleTimeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"

            android:background="@null"
            android:orientation="vertical"
            android:layout_weight="2">

            <ToggleButton
                android:id="@+id/toggle_sound_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="0dp"

                android:drawableBottom="@drawable/toggle_sound"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"

                android:textOn="@null"
                android:textOff="@null"
                android:textSize="0dp"
                />

            <ImageButton
                android:id="@+id/discard_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"

                android:src="@drawable/exit"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"/>

        </LinearLayout>

        <fragment
        android:id="@+id/CrossTime"
        android:name="com.example.miljac.myapplication.CrossTimeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        />




    </LinearLayout>











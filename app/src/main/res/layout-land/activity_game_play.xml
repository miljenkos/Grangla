    <fragment
        android:id="@+id/Table"
        android:name="com.example.miljac.myapplication.TableFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        />

    <fragment
        android:id="@+id/Result"
        android:name="com.example.miljac.myapplication.ResultFragment"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_toRightOf="@id/Table"/>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/Result"
        android:layout_toRightOf="@id/Table">


        <fragment
            android:id="@+id/CircleTime"
            android:name="com.example.miljac.myapplication.CircleTimeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ToggleButton
            android:id="@+id/toggle_sound_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:button="@drawable/toggle_sound"
            android:background="@null"
            android:layout_weight="1"/>

        <fragment
        android:id="@+id/CrossTime"
        android:name="com.example.miljac.myapplication.CrossTimeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />




    </LinearLayout>











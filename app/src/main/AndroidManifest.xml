<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boardgame.miljac.grangla">

    <application
        android:allowBackup="false"

        android:fullBackupContent="false"
        android:icon="@mipmap/ikona1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>


        <activity
            android:name=".ZeroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".MainMenuActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".HelpActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".LegalNoticesActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".MultiplayerActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".SinglePlayerMenuActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
            <!--android:theme="@style/AppTheme.NoActionBar">


            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".SinglePlayerGamePlayActivity"
            android:screenOrientation="portrait"
            android:allowBackup="false"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>
